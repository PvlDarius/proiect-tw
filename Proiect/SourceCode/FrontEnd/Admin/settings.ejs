<main class="main-content">
  <h1>Settings</h1>

  <section class="settings-category" id="profile-settings">
    <h2>Profile Settings</h2>
    <div class="profile-settings">
      <div class="setting profile-picture-container">
        <h3>Profile picture</h3>
        <img
          src="../../Public/UserImages/2_1703282396781.jpg"
          alt="current-profile-picture"
          class="current-profile-picture"
          id="currentProfilePicture"
        />

        <input
          type="file"
          name="file"
          class="inputfile"
          id="profilePictureInput"
          accept=".png, .jpg, .jpeg"
          onchange="displaySelectedPicture(this)"
        />
        <div class="button">
          <label for="profilePictureInput">Choose a file</label>
        </div>
        <button onclick="saveProfilePicture()" class="button">
          Save Profile Picture
        </button>
      </div>

      <div class="profile-info-container">
        <h3>Change user information</h3>
        <div class="setting profile-info">
          <form id="profileForm">
            <div class="input-box">
              <i class="fa-solid fa-user"></i>
              <input
                type="text"
                id="firstNameInput"
                name="first_name"
                placeholder="First Name"
              />
              <label id="first_name-validation"></label>
            </div>
            <div class="input-box">
              <i class="fa-solid fa-users"></i>
              <input
                type="text"
                id="lastNameInput"
                name="last_name"
                placeholder="Last Name"
              />
              <label id="last_name-validation"></label>
            </div>
            <div class="input-box">
              <i class="fa-solid fa-envelope"></i>
              <input
                type="email"
                id="emailInput"
                name="email"
                placeholder="Email"
              />
              <label id="email-validation"></label>
            </div>
            <div class="input-box">
              <i class="fa-solid fa-calendar-days" style="z-index: 100;"></i>
              <input type="date" id="birthdayInput" name="birthday" />
              <label id="birthday-validation"></label>
            </div>
      
            <div class="input-box">
              <i class="fa-solid fa-venus-mars" style="z-index: 100;"></i>
              <select name="gender" id="genderInput">
                <option value="placeholder">Gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
              </select>
            </div>
      
            <div class="input-box">
              <i class="fa-solid fa-city"></i>
              <input type="text" id="cityInput" name="city" placeholder="City" />
            </div>
            
          </div>
            <button class="button" type="button" onclick="handleSaveChanges()">
              Save Changes
            </button>
          </form>
        </div>
      </div>

      <div class="setting send-email-container">
        <h3>Change password</h3>
        <input type="email" id="hiddenEmail" hidden />
        <button type="button" class="button" onclick="sendPasswordResetEmail()">
          Send password reset email
        </button>
      </div>
    </div>
  </section>

  <section class="settings-category" id="user-settings">
    <h2>User Settings</h2>
    <div class="notification-settings">
      <div class="setting notification-toggle-container">
        <h3>Receive Notifications</h3>
        <label class="switch">
          <input
            type="checkbox"
            id="notificationToggle"
            onchange="toggleNotificationSetting()"
          />
          <span class="slider"></span>
        </label>
      </div>
      <button onclick="saveUserSettings()" class="button">Save User Settings</button>
    </div>
  </section>

  <!-- Add more sections for additional settings categories -->
</main>
